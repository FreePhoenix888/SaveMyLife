<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.MessageSettingsFragment"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message_template_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/message_template_text_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.85"
            android:layout_height="wrap_content"
            app:endIconMode="custom"
            app:startIconDrawable="@drawable/ic_baseline_message_24"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            android:hint="@string/message_template_hint"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_message_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/info_button_message_template"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.1"
            android:theme="@style/Widget.Material3.Button.IconButton"
            android:background="@drawable/ic_baseline_info_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:layout_gravity="center"
            app:layout_constraintDimensionRatio="1:1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_your_message_will_look_like_this"
        app:layout_constraintTop_toBottomOf="@id/message_template_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_message_will_look_like_this"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:layout_marginTop="16dp"
        />

   <com.google.android.material.textview.MaterialTextView
       android:id="@+id/evaluated_message_example"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/text_view_your_message_will_look_like_this"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:text="Message template evaluated result"
       android:layout_marginTop="4dp"
       android:gravity="start|center"
       />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_interval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="custom"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/evaluated_message_example"
        android:layout_marginTop="24dp"
        app:startIconDrawable="@drawable/ic_baseline_timer_24"
        android:hint="@string/message_sending_interval"
        >
            <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_message_sending_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_edit_text"
            android:inputType="number"
            android:maxLength="5" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>