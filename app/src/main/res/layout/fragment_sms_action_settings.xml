<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SmsActionSettingsFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sms_message_text_input_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.legacy.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:text="@string/contacts" />

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_contact_btn"
        tools:context=".SosSmsActionActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_person_add_alt_1_24"
        android:text="@string/add_contact"
        />

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/contact" />

</androidx.appcompat.widget.LinearLayoutCompat>