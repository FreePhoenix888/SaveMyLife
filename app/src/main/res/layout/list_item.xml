<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sos_action_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sos_action_image"
        android:layout_width="@dimen/sos_action_list_item_item_height"
        android:layout_height="@dimen/sos_action_list_item_item_height"
        android:layout_gravity="center|start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/actions_setting_button_image_content_description"
        android:src="@drawable/ic_baseline_message_24" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sos_action_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sos_action_list_item_item_height"
        android:layout_gravity="center|start"
        android:layout_marginStart="@dimen/sos_action_list_item_margin_between_items"
        android:layout_weight="1"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/sos_action_list_item_text_view_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sos_action_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SMS" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/sos_action_switch"
        android:layout_width="0dp"
        android:layout_height="@dimen/sos_action_list_item_item_height"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        app:useMaterialThemeColors="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sos_action_settings_button"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sos_action_settings_button"
        android:layout_width="@dimen/sos_action_list_item_item_height"
        android:layout_height="@dimen/sos_action_list_item_item_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ic_round_settings_24"
        android:onClick="@{.}"/>

</androidx.constraintlayout.widget.ConstraintLayout>