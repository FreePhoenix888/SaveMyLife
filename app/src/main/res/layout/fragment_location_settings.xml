<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.LocationSettingsFragment"
    android:padding="24dp"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/location_sharing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_sharing"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/location_sharing_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/location_sharing_text"
        app:layout_constraintBottom_toBottomOf="@id/location_sharing_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>